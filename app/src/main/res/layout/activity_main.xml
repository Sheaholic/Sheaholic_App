<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#241332"
    tools:context="com.example.sheaholics_app.MainActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="350dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/photo"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="-20dp"
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:layout_height="match_parent"
        android:background="@drawable/courses_back"
        android:layout_below="@id/cardView2"
        android:weightSum="2"
        android:padding="10dp"
        android:layout_above="@id/bottomNav">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Courses"
            android:layout_gravity="center"

            android:layout_marginBottom="8dp"
            android:textSize="25sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="5dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">
            <ImageView
                android:paddingRight="5dp"
                android:scaleType="centerCrop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/web_dev"
                android:layout_weight="1"/>
            <ImageView
                android:paddingLeft="5dp"
                android:src="@drawable/app_dev"
                android:scaleType="centerCrop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="0dp">
            <ImageView
                android:paddingRight="5dp"
                android:src="@drawable/ml"
                android:scaleType="centerCrop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:paddingLeft="5dp"
                android:src="@drawable/infosec"
                android:scaleType="centerCrop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="#241332"
        app:itemTextColor="#241332"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_bar"
        tools:ignore="MissingConstraints" />

</RelativeLayout>