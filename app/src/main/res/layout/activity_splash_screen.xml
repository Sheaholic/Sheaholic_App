<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#241332"
    tools:context="com.example.sheaholics_app.SplashScreen">
<ImageView
    android:id="@+id/imageIcon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/photo"
    android:layout_marginTop="150dp"
    android:layout_centerHorizontal="true"/>
    <TextView
        android:padding="20dp"
        android:layout_below="@id/imageIcon"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:text="Get ready to unleash your inner self, to fly high, achieve great success and yet to always give it back to your roots!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />
</RelativeLayout>